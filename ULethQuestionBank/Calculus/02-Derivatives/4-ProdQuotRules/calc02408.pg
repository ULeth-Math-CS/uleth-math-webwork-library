###################################
#  Setup

#-ULETH-#
Context("Numeric");

$a = random(2,9,1)*random(-1,1,2);
$b = random(2,6,1);
$c = random(2,9,1)*random(-1,1,2);
$d = random(2,6,1);

$f = Formula("$a*x^{$b}")->reduce();
$g = Formula("$c*x^{$d}")->reduce();

$dfu = $f->D('x')->reduce();
$dgu = $g->D('x')->reduce();

$df = Formula("$dfu")->reduce();
$dg = Formula("$dgu")->reduce();

$hsimple = Formula("$a*$c*x^{$b+$d}")->reduce();
$dhu = $hsimple->D('x')->reduce();

$dh = Formula("$dhu")->reduce();

#-ENDULETH-#

###################################
#  Main Text

#-ULETH-#
# This applies to the PGML in each scaffolding section.
# If you have LaTeX code you want to display, enter it here in the [``] brackets.
